@model IEnumerable<thousand.Models.Sale>
@{
    ViewBag.Title = "Gridview";
}

<h2>Gridview</h2>
@*/* RR grid view with search option*/*@
<script type="text/javascript">

    $(document).ready(function () {
        $('#bttnSearch').click(function () {
            var RName = $('#txtName').attr('value');
            $.ajax({
                type: "post",
                url: "/Emp/PersonGrid",
                data: { Region: $('#txtName').attr('value') },
                datatype: "json",
                traditional: true,
                success: function (data) {
                    // debugger
                    if (data == "No Record Found") {
                        alert('No Record Found');
                    }
                    else {
                        $('#gridContent').html(data);
                        $('#txtName').val(RName);
                    }
                }
            });
        });
    });
</script>

<div id="grid">
    <table width="100%">
        <tr>
            <td>
                <table>
                    <tr>
                        <td>
                            Name
                        </td>
                        <td>
                            <input type="text" id="txtName" />
                        </td>
                        <td>
                            <input type="button" id="bttnSearch" value="Search" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>

                @{
        var grid = new WebGrid(Model, canPage: true, rowsPerPage: 500,
        selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
        grid.Pager(WebGridPagerModes.All);
                }


                @grid.GetHtml(tableStyle: "webGrid",
headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(
                grid.Column("Region", "Region"),
                grid.Column("Country", "Country"),
             grid.Column("ItemType", "ItemType"),
            grid.Column("SalesChannel", "SalesChannel"),
                grid.Column("OrderPriority", "OrderPriority"),
                grid.Column("SalesChannel", "SalesChannel"),
                grid.Column("OrderDate", "OrderDate"),
                grid.Column("OrderId", "OrderId"),
                grid.Column("Shipdate", "Shipdate"),
                grid.Column("UnitsSold", "UnitsSold"),
                grid.Column("UnitPrice", "UnitPrice"),
                grid.Column("UnitCost", "UnitCost"),
                grid.Column("TotalRevenue", "TotalRevenue"),
                grid.Column("TotalCost", "TotalCost"),
                grid.Column("TotalProfit", "TotalProfit"))
                )

            </td>
        </tr>
        
    </table>
</div>

